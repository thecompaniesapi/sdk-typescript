{
  "name": "@thecompaniesapi/sdks",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "description": "An enrichment platform to search and retrieve information about companies",
  "author": "YaÃ«l GUILLOUX <yael@thecompaniesapi.com>",
  "license": "MIT",
  "homepage": "https://github.com/thecompaniesapi/sdk-typescript#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecompaniesapi/sdk-typescript.git"
  },
  "bugs": "https://github.com/thecompaniesapi/sdk-typescript/issues",
  "keywords": [
    "companies",
    "enrichment",
    "search",
    "retrieve",
    "information",
    "api",
    "mcp",
    "sdk"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint --cache-dir='.turbo' --continue",
    "prepublishOnly": "turbo run build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "turbo run typecheck",
    "prepare": "simple-git-hooks",
    "openapi:update": "jiti ./scripts/update-schema.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.13.2",
    "@antfu/utils": "9.2.0",
    "@types/node": "22.15.21",
    "bumpp": "10.1.1",
    "dotenv": "16.5.0",
    "eslint": "9.27.0",
    "jiti": "2.4.2",
    "lint-staged": "16.0.0",
    "openapi-typescript": "7.8.0",
    "simple-git-hooks": "2.13.0",
    "tinyexec": "1.0.1",
    "tsx": "4.19.4",
    "turbo": "2.5.3",
    "typescript": "5.8.3",
    "unbuild": "3.5.0",
    "vite": "6.3.5",
    "vitest": "3.1.4",
    "vitest-package-exports": "0.1.1",
    "yaml": "2.8.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
